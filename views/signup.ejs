                  <input type="text" class="form-control" id="cId" >
                </div>
                <div class="col-md-2 pl-0 ml-0 pt-5">
                  <div class="btn btn-outline-primary" type="button" id='btnIdCheck1' data-memo ='cId'>ID CHECK</div>
                </div>
              </div>
              <div class="form-group row">
                <div class="col-md-6">
                  <label for="cPass" class="text-black">PASSWORD <span class="text-danger">*</span></label>
                  <input type="password" class="form-control" id="cPass">
                </div>
                <div class="col-md-6">
                  <label for="cConfirmPass" class="text-black">CONFIRM PASSWORD <span
                      class="text-danger">*</span></label>
                  <input type="password" class="form-control" id="cConfirmPass">
                </div>
              </div>
              <div class="form-group row">
                <div class="col-md-6">
                  <label for="cName" class="text-black">NAME<span class="text-danger">*</span></label>
                  <input type="text" class="form-control" id="cName">
                </div>
                <div class="col-md-4">
                  <label for="cMail" class="text-black">EMAIL <span class="text-danger">*</span></label>
                  <input type="email" class="form-control" id="cMail">
