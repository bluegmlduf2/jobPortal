                  <div class="btn btn-outline-primary" type="button" id='btnIdCheck'>ID CHECK</div>
                </div>
              </div>
              <div class="form-group row">
                <div class="col-md-6">
                  <label for="itemName" class="text-black">PASSWORD <span class="text-danger">*</span></label>
                  <input type="password" class="form-control" id="itemName">
                </div>
                <div class="col-md-6">
                  <label for="itemName" class="text-black">CONFIRM PASSWORD <span class="text-danger">*</span></label>
                  <input type="password" class="form-control" id="itemName">
                </div>
              </div>
