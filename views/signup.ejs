                    <input type="radio" class="form-check-input" id="rdoSex1" name="rdoSex" checked>
                    <label class="form-check-label" for="materialInline1">Man</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input type="radio" class="form-check-input" id="rdoSex2" name="rdoSex">
                    <label class="form-check-label" for="materialInline2">Woman</label>
                  </div>
                </div>
              </div>
              <div class="form-group row">
                <div class="col-md-12">
                  <label for="itemTake" class="text-black">ADDRESS</label>
                  <input type="text" class="form-control" id="itemTake">
                </div>
              </div>
              <div class="form-group row">
                <div class="col-md-6">
                  <label for="jobType" class="text-black">JOB TYPE<span class="text-danger">*</span></label>
                  <select id="jobType" class="form-control">
                    <option value="0">Please Select</option>
                    <% for(let j = 0; j< JsonParam.jobType.length; j++){%>
                    <option value="<%=JsonParam.jobType[j].CODE_IDX%>"><%=JsonParam.jobType[j].CODE_NAME%></option>
                    <%}%>
                  </select>
                </div>
                <div class="col-md-6">
                  <label for="jobTypeDetail" class="text-black">JOB TYPE DETAIL<span class="text-danger">*</span></label>
                  <select id="jobTypeDetail" class="form-control">
                    <!--JOBTYPE DETAIL-->
                    <option value="0">Please Select</option>
                  </select>
                </div>
              </div>
              <div class="form-group row">
                <div class="col-md-6">
                  <label for="itemImage" class="text-black" style="display:block;">IMAGE<span
                      class="text-danger">*</span></label>
                  <!-- <input type="text" class="form-control" id="c_lname" name="c_lname"> -->
                  <!-- <div class="site-blocks-cover inner-page" style="background-image: url('images/hero_1.jpg');"> -->
                  <img src='/images/postImage/noimage.png' id='itemImage' alt='Image'
                    class='img-fluid'>
                </div>
                <div class="col-md-6">
                  <!-- <input class="upload-name" value="Select File" disabled="disabled" >  -->
                  <form action="/pharmaShop/main/saveImage" method="post" id="form_img" enctype="multipart/form-data"
                    accept-charset="utf-8">
                    <div>
                      <label for="itemImage" class="text-black">SELECT IMAGE FILE</label><span
                        class="text-danger">*</span>
                        <div>
                      <input type="file" name="image" id="image">
                      <span class="error image"></span>
                      </div>
                    </div>
                    </br>
                    <label for="itemPath" class="text-black" style="display:block;">SAVE FILE PATH</label>
                    <input type="text" class="form-control" id="itemPath" disabled='disabled'>
                    <input type="submit" name="submit" value="Image Save" style="margin-top:15px;">
                  </form>
                </div>
              </div>
              <div class="form-group">
                <label for="itemContent" class="text-black">SELF INTRODUCTION<span class="text-danger">*</span></label>
                <textarea id="itemContent" cols="30" rows="5" class="form-control"
                  placeholder="Write here..."></textarea>
              </div>
              <div class="form-group">
                <div style='float:left;'>
                  <div class="btn btn-primary btn-lg" type="button" id='btnInit'>INIT VALUE</div>
                </div>
                <div style='float:right;'>
                  <div class="btn btn-primary btn-lg" type="button" id='btnSave'>SAVE</div>
                </div>
              </div>
              <div class="form-group">&nbsp;</div>
            </div>
          </div>
        </div>
