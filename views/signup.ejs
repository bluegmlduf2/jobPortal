                  <div class="form-check form-check-inline pt-3">
                    <input type="radio" class="form-check-input" id="rdoSex1" name="rdoSex" checked>
                    <label class="form-check-label" for="materialInline1">Man</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input type="radio" class="form-check-input" id="rdoSex2" name="rdoSex">
                    <label class="form-check-label" for="materialInline2">Woman</label>
                  </div>
                </div>
              </div>
              <div class="form-group row">
                <div class="col-md-12">
                  <label for="cAdress" class="text-black">ADDRESS<span class="text-danger">*</span></label>
                  <input type="text" class="form-control" id="cAdress">
                </div>
              </div>
              <div class="form-group row">
                <div class="col-md-6">
                  <label for="cJobType" class="text-black">JOB TYPE<span class="text-danger">*</span></label>
                  <select id="cJobType" class="form-control">
                    <option value="0">Please Select</option>
                    <% for(let j = 0; j< JsonParam.jobType.length; j++){%>
                    <option value="<%=JsonParam.jobType[j].CODE_IDX%>"><%=JsonParam.jobType[j].CODE_NAME%></option>
                    <%}%>
                  </select>
                </div>
                <div class="col-md-6">
                  <label for="cJobTypeDetail" class="text-black">JOB TYPE DETAIL<span class="text-danger">*</span></label>
                  <select id="cJobTypeDetail" class="form-control">
                    <!--JOBTYPE DETAIL-->
                    <option value="0">Please Select</option>
                  </select>
                </div>
              </div>
              <div class="form-group row">
                <div class="col-md-6">
                  <label for="cImage" class="text-black" style="display:block;">CANDIDATE IMAGE<span
                      class="text-danger">*</span></label>
                  <!-- <input type="text" class="form-control" id="c_lname" name="c_lname"> -->
                  <!-- <div class="site-blocks-cover inner-page" style="background-image: url('images/hero_1.jpg');"> -->
                  <img src='/images/postImage/noimage.png' width="300" height="300" id='cImage' alt='Image'
                    class='img-fluid' style="display: block; margin: auto;">
                </div>
                <div class="col-md-6">
                  <!-- <input class="upload-name" value="Select File" disabled="disabled" >  -->
                  <form action="/signup/candidate/imageUpload" method="post" id="c_form_img" enctype="multipart/form-data"
                    accept-charset="utf-8">
                    <div>
                      <label for="cImageFile" class="text-black">SELECT IMAGE FILE</label><span
                        class="text-danger">*</span>
                        <div>
                      <input type="file" name="cImage" id="cImageFile">
                      <span class="error image"></span>
                      </div>
                    </div>
                    </br>
                    <label for="cPath" class="text-black" style="display:block;">SAVE FILE PATH</label>
                    <input type="text" class="form-control" id="cPath" disabled='disabled'>
                    <input type="submit" name="cSubmit" value="Image Save" style="margin-top:15px;">
                  </form>
                </div>
              </div>
              <div class="form-group">
                <label for="cIntro" class="text-black">SELF INTRODUCTION<span class="text-danger">*</span></label>
                <textarea id="cIntro" cols="30" rows="5" class="form-control"
                  placeholder="Write here..."></textarea>
              </div>
              <div class="form-group">
                <div style='float:left;'>
                  <div class="btn btn-primary btn-lg" type="button" id='btnInit1'>INIT VALUE</div>
                </div>
                <div style='float:right;'>
                  <div class="btn btn-primary btn-lg" type="button" id='btnSave1' data-memo ='cId'>SAVE</div>
                </div>
              </div>
              <div class="form-group">&nbsp;</div>
            </div>
          </div>
        </div>
      </div>
